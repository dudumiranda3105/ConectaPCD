generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TipoDeficiencia {
  id        Int                  @id @default(autoincrement())
  nome      String               @unique
  subtipos  SubtipoDeficiencia[]
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
}

model SubtipoDeficiencia {
  id               Int                @id @default(autoincrement())
  nome             String
  tipoId           Int
  tipo             TipoDeficiencia    @relation(fields: [tipoId], references: [id], onDelete: Cascade)
  barreiras        SubtipoBarreira[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  VagaSubtipo      VagaSubtipo[]
  CandidatoSubtipo CandidatoSubtipo[]

  @@unique([tipoId, nome]) // evita subtipo duplicado dentro do mesmo tipo
}

model Barreira {
  id              Int                      @id @default(autoincrement())
  descricao       String                   @unique
  subtipos        SubtipoBarreira[]
  acessibilidades BarreiraAcessibilidade[]
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @updatedAt

  CandidatoSubtipoBarreira CandidatoSubtipoBarreira[]
}

model Acessibilidade {
  id        Int                      @id @default(autoincrement())
  descricao String                   @unique
  barreiras BarreiraAcessibilidade[]
  createdAt DateTime                 @default(now())
  updatedAt DateTime                 @updatedAt

  VagaAcessibilidade      VagaAcessibilidade[]
  CandidatoAcessibilidade CandidatoAcessibilidade[]
}

// tabelas de junção explícitas (para fácil evolução)
model SubtipoBarreira {
  subtipoId  Int
  barreiraId Int
  subtipo    SubtipoDeficiencia @relation(fields: [subtipoId], references: [id], onDelete: Cascade)
  barreira   Barreira           @relation(fields: [barreiraId], references: [id], onDelete: Cascade)

  @@id([subtipoId, barreiraId])
  @@index([barreiraId])
}

model BarreiraAcessibilidade {
  barreiraId       Int
  acessibilidadeId Int
  barreira         Barreira       @relation(fields: [barreiraId], references: [id], onDelete: Cascade)
  acessibilidade   Acessibilidade @relation(fields: [acessibilidadeId], references: [id], onDelete: Cascade)

  @@id([barreiraId, acessibilidadeId])
  @@index([acessibilidadeId])
}

model Empresa {
  id          Int     @id @default(autoincrement())
  nome        String
  cnpj        String? @unique
  email       String? @unique
  vagas       Vaga[]
  userId      Int?    @unique
  user        User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyData Json?

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vaga {
  id        Int     @id @default(autoincrement())
  empresaId Int
  empresa   Empresa @relation(fields: [empresaId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  titulo          String               @default("Sem título")
  descricao       String
  escolaridade    String
  tipo            String? // Tipo da vaga: Tempo integral, Meio período, etc.
  regimeTrabalho  String? // Regime: Presencial, Híbrido, Remoto
  beneficios      String? // Benefícios oferecidos
  subtiposAceitos VagaSubtipo[]
  acessibilidades VagaAcessibilidade[]
  candidaturas    Candidatura[]
  matchScores     MatchScore[]

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VagaSubtipo {
  vagaId    Int
  subtipoId Int
  vaga      Vaga               @relation(fields: [vagaId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  subtipo   SubtipoDeficiencia @relation(fields: [subtipoId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([vagaId, subtipoId])
  @@index([subtipoId])
}

model VagaAcessibilidade {
  vagaId           Int
  acessibilidadeId Int
  disponivel       Boolean @default(true) // empresa oferece essa acessibilidade
  qualidade        String  @default("boa") // excelente, boa, basica
  observacoes      String?

  vaga           Vaga           @relation(fields: [vagaId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  acessibilidade Acessibilidade @relation(fields: [acessibilidadeId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([vagaId, acessibilidadeId])
  @@index([acessibilidadeId])
}

model Candidato {
  id           Int     @id @default(autoincrement())
  nome         String
  cpf          String? @unique
  email        String? @unique
  telefone     String?
  escolaridade String

  // Relações
  subtipos        CandidatoSubtipo[]
  candidaturas    Candidatura[]
  acessibilidades CandidatoAcessibilidade[] // Nova relação direta
  matchScores     MatchScore[]

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId      Int?  @unique
  user        User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  profileData Json?

  @@index([nome])
}

model Candidatura {
  id          Int       @id @default(autoincrement())
  candidatoId Int
  vagaId      Int
  candidato   Candidato @relation(fields: [candidatoId], references: [id], onDelete: Cascade)
  vaga        Vaga      @relation(fields: [vagaId], references: [id], onDelete: Cascade)
  status      String    @default("Pendente") // Pendente, Aceita, Rejeitada
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([candidatoId, vagaId])
  @@index([vagaId])
  @@index([candidatoId])
}

// N:N Candidato <-> Subtipo
model CandidatoSubtipo {
  candidatoId Int
  subtipoId   Int
  candidato   Candidato          @relation(fields: [candidatoId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  subtipo     SubtipoDeficiencia @relation(fields: [subtipoId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  barreiras CandidatoSubtipoBarreira[] // relação contextual (por subtipo)

  @@id([candidatoId, subtipoId])
  @@index([subtipoId])
}

// N:N contextual (candidato + subtipo) <-> barreira
model CandidatoSubtipoBarreira {
  candidatoId Int
  subtipoId   Int
  barreiraId  Int

  candidatoSubtipo CandidatoSubtipo @relation(fields: [candidatoId, subtipoId], references: [candidatoId, subtipoId], onDelete: Cascade, onUpdate: Cascade)
  barreira         Barreira         @relation(fields: [barreiraId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([candidatoId, subtipoId, barreiraId])
  @@index([barreiraId])
}

// N:N Candidato <-> Acessibilidade (necessidades diretas)
model CandidatoAcessibilidade {
  candidatoId      Int
  acessibilidadeId Int
  prioridade       String  @default("importante") // essencial, importante, desejavel
  observacoes      String?

  candidato      Candidato      @relation(fields: [candidatoId], references: [id], onDelete: Cascade)
  acessibilidade Acessibilidade @relation(fields: [acessibilidadeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([candidatoId, acessibilidadeId])
  @@index([acessibilidadeId])
}

// Sistema de Matching inteligente
model MatchScore {
  id          Int @id @default(autoincrement())
  candidatoId Int
  vagaId      Int

  // Métricas de compatibilidade
  scoreTotal               Int // 0-100
  scoreAcessibilidades     Int // 0-100
  scoreSubtipos            Int // 0-100
  acessibilidadesAtendidas Int // quantas necessidades são atendidas
  acessibilidadesTotal     Int // total de necessidades do candidato

  // Detalhes para explicar o score
  detalhes Json? // { "atendidas": [...], "nao_atendidas": [...], "extras": [...] }

  candidato Candidato @relation(fields: [candidatoId], references: [id], onDelete: Cascade)
  vaga      Vaga      @relation(fields: [vagaId], references: [id], onDelete: Cascade)

  calculadoEm DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([candidatoId, vagaId])
  @@index([scoreTotal])
  @@index([vagaId])
}

enum Role {
  CANDIDATE
  COMPANY
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CANDIDATE)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations to domain profiles
  candidato Candidato? @relation()
  empresa   Empresa?   @relation()

  @@index([email])
}
